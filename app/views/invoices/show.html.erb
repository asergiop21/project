  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
    </div>
    <div class="col-sm-offset-2 col-md-8 col-md-offset-3">
      <h3>REMITO</h3>

<b>Cliente:</b>
<%= @invoice.customer_id %>


<table class="table table-bordered">
  <thead>
    <tr>
      <th class=col-sm-offset-2>Cantidad</th>
      <th class=col-sm-offset-10>Articulo</th>
      <th>Precio Unit</th>
      <th>Descuento</th>
      <th>Precio Total</th>
    </tr>
  </thead>
