      <%  @invoice.orders.each do |order|%>
      <tr>
        <td><%= order.quantity%></td>
        <td><%= order.article.name %></td>
        <td><%= order.price_unit%></td>
        <td><%= order.discount%></td>
        <td><%= order.price_total%></td>
      </tr>
      <%end %>
  </tbody>
</table>

