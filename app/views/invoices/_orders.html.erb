      <%= f.input :quantity, label: false, as: :string, :input_html => {:class => "form-control quantity"}  %>
   </div>
   <div class="col-md-2">
      <%= f.input :price_unit, label: false, as: :string, :input_html => {:class => "form-control"}  %>
