<h1>Listing invoice_stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_stocks.each do |invoice_stock| %>
      <tr>
        <td><%= invoice_stock.name %></td>
        <td><%= link_to 'Show', invoice_stock %></td>
        <td><%= link_to 'Edit', edit_invoice_stock_path(invoice_stock) %></td>
        <td><%= link_to 'Destroy', invoice_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

