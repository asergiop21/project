<%= simple_form_for(@accounting_record) do |f| %>

  <div class="container"> 
  <div class="form-inputs">
    <div class="row-fluid">
      <%= f.error_notification %>
      <div class="col-md-5">
        <div class="field">
          <%=f.input :detail, label: "Detalle", input_html: {class: "form-control" }  %>
        </div>
        <div class="field">
          <%= f.input :debit, label: "Ingreso" , input_html: {class: "form-control" } %><br>
        </div>
        <div class="field">
          <%= f.input :credit , label: "Egreso",  input_html: {class: "form-control" } %><br>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
